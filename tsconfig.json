{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",

    "baseUrl": ".",
    "paths": {
      "@rc/*": ["./src/rc/*"],
      "@rc": ["./src/rc"]
    }
  },
  "include": [
    "src/*", "src", "src/frontend/*", "src/rc/slideshow/*"
  ]
}
